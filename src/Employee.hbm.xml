<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="Employee" table="EMPLOYEES">
      <meta attribute="class-description">
         This class contains the employee detail. 
      </meta>
      <id name="ID" type="long" column="employee_id">
      <generator class="sequence">
      <param name="sequence">employee_seq</param>
         </generator>
      </id>

      <property name="Name" column="first_name" type="string"/>
    
      <property name="salary" column="salary" type="float"/>
      
      <property name="phoneNo" column="phone_number" type="string"/>
     
      <property name="jobTitle" column="job_id" type="string"/>
    
   </class>
</hibernate-mapping>